#include <stdio.h>

int main(){
    
   int i,j,matriz[2][2];
   
   for(i=0; i<2; i++){
        for(j=0; j<2; j++){
            printf("digite");
            scanf("%d", &matriz[i][j]);
             
             if (matriz[i][j] %2 ==0){
                 matriz [i][j] = 1;
                 
             }
             
             else{
                 matriz[i][j] =0;
             }

        }
   }

   for(i=0; i<2; i++){
        for(j=0; j<2; j++){
            printf("%d", matriz[i][j]);
       
        }
        printf("\n");
   }

    return 0;
}
